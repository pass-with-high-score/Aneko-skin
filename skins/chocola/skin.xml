<?xml version="1.0" encoding="utf-8"?>
<motion-params
        package="org.nqmgaming.chocola"
        name="Chocola"
        preview="icon.png"
        author="nqmgaming"
        acceleration="160"
        awakeState="awake"
        deaccelerationDistance="60"
        initialState="stop"
        maxVelocity="100"
        moveStatePrefix="move"
        proximityDistance="10"
        wallStatePrefix="wall">
    <motion
            checkWall="true"
            nextState="wait"
            state="stop">
        <item
                drawable="stop"
                duration="5000" />
    </motion>
    <motion state="wait">
        <item
                drawable="wait1"
                duration="1000" />
        <repeat-item repeatCount="2">
            <item
                    drawable="wait2"
                    duration="1000" />
            <item
                    drawable="wait3"
                    duration="1000" />
        </repeat-item>
        <repeat-item repeatCount="50">
            <item
                    drawable="sleep1"
                    duration="1000" />
            <item
                    drawable="sleep2"
                    duration="1000" />
        </repeat-item>
    </motion>
    <motion
            checkMove="true"
            nextState="stop"
            state="awake">
        <item
                drawable="awake"
                duration="750" />
    </motion>
    <motion state="moveUp">
        <repeat-item>
            <item
                    drawable="up1"
                    duration="250" />
            <item
                    drawable="up2"
                    duration="250" />
        </repeat-item>
    </motion>
    <motion state="moveDown">
        <repeat-item>
            <item
                    drawable="down1"
                    duration="250" />
            <item
                    drawable="down2"
                    duration="250" />
        </repeat-item>
    </motion>
    <motion state="moveLeft">
        <repeat-item>
            <item
                    drawable="left1"
                    duration="250" />
            <item
                    drawable="left2"
                    duration="250" />
        </repeat-item>
    </motion>
    <motion state="moveRight">
        <repeat-item>
            <item
                    drawable="right1"
                    duration="250" />
            <item
                    drawable="right2"
                    duration="250" />
        </repeat-item>
    </motion>
    <motion state="moveUpLeft">
        <repeat-item>
            <item
                    drawable="upleft1"
                    duration="250" />
            <item
                    drawable="upleft2"
                    duration="250" />
        </repeat-item>
    </motion>
    <motion state="moveUpRight">
        <repeat-item>
            <item
                    drawable="upright1"
                    duration="250" />
            <item
                    drawable="upright2"
                    duration="250" />
        </repeat-item>
    </motion>
    <motion state="moveDownRight">
        <repeat-item>
            <item
                    drawable="dwright1"
                    duration="250" />
            <item
                    drawable="dwright2"
                    duration="250" />
        </repeat-item>
    </motion>
    <motion state="moveDownLeft">
        <repeat-item>
            <item
                    drawable="dwleft1"
                    duration="250" />
            <item
                    drawable="dwleft2"
                    duration="250" />
        </repeat-item>
    </motion>
    <motion
            nextState="wait"
            state="wallLeft">
        <repeat-item repeatCount="3">
            <item
                    drawable="wallleft1"
                    duration="250" />
            <item
                    drawable="wallleft2"
                    duration="250" />
        </repeat-item>
    </motion>
    <motion
            nextState="wait"
            state="wallRight">
        <repeat-item repeatCount="3">
            <item
                    drawable="wallright1"
                    duration="250" />
            <item
                    drawable="wallright2"
                    duration="250" />
        </repeat-item>
    </motion>
</motion-params>
